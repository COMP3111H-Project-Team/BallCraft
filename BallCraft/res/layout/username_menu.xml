<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/username_menu_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <android.opengl.GLSurfaceView
        android:id="@+id/username_menu_gl_surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <LinearLayout
        android:id="@+id/username_menu_linear_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">
        
        <TextView
            android:id="@+id/username_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14pt"
            android:textColor="#FFFFFF"
            android:text="Please enter your user name" />
        
        <EditText 
            android:id="@+id/username_menu_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center" />
        
        <Button
            android:id="@+id/username_menu_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="11pt"
            android:text="Ok" />
        
    </LinearLayout>
    
</RelativeLayout>