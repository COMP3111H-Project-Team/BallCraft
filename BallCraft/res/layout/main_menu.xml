<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<android.opengl.GLSurfaceView
	    android:id="@+id/main_menu_gl_surface_view"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" />

	<ImageView
	    android:id="@+id/main_menu_setting_image_view"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:scaleType="fitXY"
	    android:layout_alignParentRight="true"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="10dp"
	    android:src="@drawable/setting" />
	
	<LinearLayout
	    android:id="@+id/main_menu_button_container"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_centerInParent="true">
	    
		<ImageView
		    android:id="@+id/main_menu_start_game_image_view"
		    android:layout_width="wrap_content"
		    android:layout_height="80dp"
		    android:src="@drawable/start_button" />
		
		<ImageView
		    android:id="@+id/main_menu_profile_image_view"
		    android:layout_width="wrap_content"
		    android:layout_height="80dp"
		    android:src="@drawable/profile_button" />
		
	</LinearLayout>
	
</RelativeLayout>